<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.FaceFinalReognition" parent="Theme.AppCompat.Light">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="roundButton">@drawable/round_button_light</item>
        <item name="alertDialogTheme">@style/AppThemeDialogLight</item>
    </style>
    <style name="AppThemeDialogLight" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="AppThemeDark" parent="Theme.AppCompat.Light">
        <item name="titleColor">@android:color/primary_text_dark</item>
        <item name="roundButton">@drawable/round_button_dark</item>
        <item name="colorAccent">@color/colorAccentLight</item>

    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Translucent" parent="@android:style/Theme.Translucent.NoTitleBar" />

    <!-- @android:style/TextAppearance.Toast -->
    <style name="TextAppearance_Toast" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!-- api 25 vs 27 compatibility https://stackoverflow.com/questions/48241620 @style/TextAppearance.AppCompat.Notification.Info -->
    <style name="NotificationInfo">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- api 25 vs 27 compatibility https://stackoverflow.com/questions/48241620 @style/TextAppearance.AppCompat.Notification.Time -->
    <style name="NotificationTime">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppThemeLightLib" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="progressbar_round">@drawable/progressbar_round_light</item>
        <item name="toolbar_icon_bg">@drawable/toolbar_icon_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="toolbar_icon_text">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/toolbar_icon_bottom_bg</item>
    </style>

    <style name="AppThemeDarkLib" parent="Theme.AppCompat">
        <item name="progressbar_round">@drawable/progressbar_round_dark</item>
        <item name="toolbar_icon_bg">@drawable/toolbar_icon_dark</item>
        <item name="android:preferenceStyle">@style/Theme.AppCompat</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>
